{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./build/dist",
        "outDir": "./build/dist",
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "esnext",
            "webworker"
        ],
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "strict": true,
        "types": [
            "@cloudflare/workers-types"
        ],
        "esModuleInterop": true
    },
    "typedocOptions": {
        "mode": "modules",
        "out": "docs"
    },
    "include": [
        "./src/*.ts",
        "./src/**/*.ts",
        "./node_modules/@cloudflare/workers-types/index.d.ts"
    ],
    "exclude": [
        "node_modules/",
        "dist/"
    ]
}
